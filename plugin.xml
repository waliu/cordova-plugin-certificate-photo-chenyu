<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-certificate-photo-chenyu" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>CertificatePhoto</name>
    <js-module name="CertificatePhoto" src="www/CertificatePhoto.js">
        <clobbers target="CertificatePhoto"/>
    </js-module>
    <platform name="android">

        <hook type="after_plugin_add" src="scripts/android-install.js"/>
        <hook type="after_plugin_install" src="scripts/android-install.js"/>
        <hook type="before_plugin_rm" src="scripts/android-install.js"/>
        <hook type="before_plugin_uninstall" src="scripts/android-install.js"/>

        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="CertificatePhoto">
                <param name="android-package" value="certificate.photo.CertificatePhoto"/>
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-feature android:name="android.hardware.camera.any"/>
            <uses-permission android:name="android.permission.CAMERA"/>
            <uses-permission android:name="android.permission.RECORD_AUDIO"/>
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        </config-file>


        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity
                    android:name="certificate.photo.CertificatePhotoActivity"
                    android:exported="false"
                    android:theme="@style/Theme.AppCompat.NoActionBar"/>
        </config-file>


        <source-file src="src/android/java/CertificatePhoto.java"
                     target-dir="src/certificate/photo/"/>

        <source-file src="src/android/java/CertificatePhotoActivity.java"
                     target-dir="src/certificate/photo/"/>

        <source-file src="src/android/java/ImageSavedCallback.java"
                     target-dir="src/certificate/photo/"/>

        <source-file src="src/android/java/MyCameraXApplication.java"
                     target-dir="src/certificate/photo/"/>

        <source-file src="src/android/java/Shadow.java"
                     target-dir="src/certificate/photo/"/>

        <source-file src="src/android/layout/activity_certificate_photo.xml"
                     target-dir="res/layout/"/>

        <source-file src="src/android/drawable/cp_img_1.png"
                     target-dir="res/drawable/"/>
        <source-file src="src/android/drawable/cp_img_2.png"
                     target-dir="res/drawable/"/>
        <source-file src="src/android/drawable/cp_img_3.png"
                     target-dir="res/drawable/"/>



        <framework src="androidx.camera:camera-view:1.0.0-alpha26"/>

        <framework src="androidx.camera:camera-lifecycle:1.0.0"/>

        <framework src="androidx.constraintlayout:constraintlayout:2.0.4"/>

        <framework src="androidx.camera:camera-camera2:1.0.0"/>

    </platform>
</plugin>